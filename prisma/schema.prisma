// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid()) @db.Uuid
  name       String
  username   String      @unique
  password   String
  registerAt DateTime    @default(now())
  Content    Content[]
  Blacklist  Blacklist[]
}

model Content {
  id          Int      @id @default(autoincrement())
  videoTitle  String
  videoUrl    String
  comment     String
  rating      Int
  thumbnaiUrl String
  creatorName String
  creatorUrl  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  User        User     @relation(fields: [ownerId], references: [id])
  ownerId     String   @db.Uuid
}

model Blacklist {
  id        String   @id @default(uuid()) @db.Uuid // Unique session identifier, can be a UUID or any other unique string
  ownerId   String   @db.Uuid
  token     String   @unique // Unique token associated with this session, used for authentication
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime // Timestamp indicating when the session/token expires
  User      User     @relation(fields: [ownerId], references: [id])
}
